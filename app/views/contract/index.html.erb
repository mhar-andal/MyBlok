<form id="creditcard" class="form" action="/users" method="post">
   <fieldset>
    <legend>Credit Card:</legend>
    <p class="card_sig">
      <input type="text" name="user[card_signifier]" id="card_sig" required>
      <label for="card_type">What Card is this?</label>
    </p>

    <p class="bank_name">
