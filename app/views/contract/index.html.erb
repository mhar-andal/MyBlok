<h1 class="header">Please select one type of data to enter</h1>
<form id="bank-account" class="form" action="/users" method="post">
   <fieldset>
    <legend>Bank Account Info:</legend>

    <p class="bank_sig">
        <input type="text" name="user[signifier]" id="bank-sig" required>
        <label for="bank_name">What account?</label>
    </p>

    <p class="bank_name">
        <input type="text" name="user[bank_name]" id="bank_name" required>
        <label for="bank_name">Bank Name</label>
    </p>

    <p class="account_number">
        <input type="text" name="user[account_number]" id="account_number" required>
        <label for="account_number">Account Number</label>
    </p>

    <p class="routing_number">
        <input type="text" name="user[routing_number]" id="routing_number" required>
        <label for="routing_number">Routing Number</label>
    </p>

    <p class="submit">
        <input id="save" type="submit" value="Save">
    </p>

   </fieldset>
</form>

